<mvc:View controllerName="com.exyte.gmui.controller.Approval"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:cust="com.exyte.gmui.controls">
    <Page class="formClass">
    <customHeader>
            <core:Fragment fragmentName="com.exyte.gmui.fragment.formHeader" type="XML"/>
        </customHeader>
        <content>
            <VBox class="sapUiSmallMarginBegin sapUiTinyMarginTop sapUiSmallMarginEnd" width="98%">

                <!-- Main Card -->
                <VBox class="sapUiSmallMarginTop initiateMainCard">
                    <!-- Emloyee Section -->
                    <f:Card class="sapUiSmallMargin ApprovalEmpSection" height="6rem" width="98.5%">
                        <f:content>
                            <HBox class="sapUiSmallMargin">
                                <VBox width="6%">
                                    <Avatar initials="{/Approval/cust_initials}" displaySize="M" showBorder="true" />
                                </VBox>
                                <VBox width="25%"  class="VBRightBorder" >
                                   <Title text="{/Approval/cust_UserName}" class="sapUiTinyMarginTop inititaionFormTitle"/>
                                   <Text text="{/Approval/cust_UserPostion}" class="initiationFormLabel"/>
                                </VBox>
                                 <VBox width="20%"  class="VBRightBorder sapUiMediumMarginBegin" >
                                   <Label text="Department" class="sapUiTinyMarginTop initiationFormLabel"/>
                                   <Text text="{/Approval/cust_Department}" class="initiationFormLabel"/>
                                </VBox>
                                 <VBox width="20%"  class="VBRightBorder sapUiMediumMarginBegin" >
                                   <Label text="Legal Entity" class="sapUiTinyMarginTop initiationFormLabel"/>
                                   <Text text="{/Approval/cust_LegalEntity}" class="initiationFormLabel"/>
                                </VBox>
                                 <VBox width="10%" class="VBRightBorder sapUiMediumMarginBegin" >
                                   <Label text="Country" class="sapUiTinyMarginTop initiationFormLabel"/>
                                   <Text text="{/Approval/cust_Country}" class="initiationFormLabel"/>
                                </VBox>
                                 <VBox width="10%"  class="sapUiMediumMarginBegin" >
                                   <Label text="Hire Date" class="sapUiTinyMarginTop initiationFormLabel"/>
                                   <Text text="{path:'/Approval/cust_HireDate',formatter:'.formatter.formatDate'}" class="initiationFormLabel"/>
                                </VBox>
                            </HBox>

                        </f:content>
                    </f:Card>
                    <!-- Process Selection Section -->
                    <f:Card class="sapUiSmallMarginBegin sapUiTinyMarginBottom" height="9rem" width="98.5%">
                        <f:content>
                            <VBox >
                                <HBox class="sapUiSmallMargin" width="96%">
                                    <Title text="Process Selection" class="inititaionFormTitle"/>
                                    <ToolbarSpacer class="customTollbarSpacer" width="112rem"/>
                                </HBox>

                                <HBox class="sapUiSmallMargin" width="96%">
                                    <VBox width="33rem">
                                        <Label text="Process Type"  class="initiationFormLabel"/>
                                        <Text text="{/Approval/cust_ProcessTypeName}" class="initiationFormLabel"/>
                                    </VBox>
                                    <VBox width="33rem">
                                        <Label text="Host Manager" class="initiationFormLabel"/>
                                        <Text text="{/Approval/cust_HostManager}" class="initiationFormLabel"/>
                                    </VBox>

                                </HBox>

                            </VBox>

                        </f:content>
                    </f:Card>
                    <!-- Assignment Initiation Section -->
                    <f:Card class="sapUiSmallMarginBegin sapUiTinyMarginBottom sapUiTinyMarginTop sapUiSmallMarginBottom" height="{= ${FormData>/cust_ProcessType} === 'P' ? '18rem' : '11rem'}" width="98.5%">
                        <f:content>
                            <VBox >
                                <HBox class="sapUiSmallMargin" width="96%">
                                    <Title text="Assignment Initiation" class="inititaionFormTitle"/>
                                    <ToolbarSpacer class="customTollbarSpacer" width="112rem"/>
                                </HBox>

                                <HBox class="sapUiSmallMargin" width="96%">
                                    <VBox width="33rem">
                                        <Label text="Start Date"  class="initiationFormLabel"/>
                                        <Text text="{path: '/Approval/cust_StartDate',formatter:'.formatter.formatDate'}" class="initiationFormLabel" />
                                    </VBox>
                                    <VBox width="33rem">
                                        <Label text="End Date"  class="initiationFormLabel"/>
                                        <Text text="{path: '/Approval/cust_EndDate',formatter:'.formatter.formatDate'}" class="initiationFormLabel" />
                                    </VBox>
                                    <VBox width="33rem">
                                        <Label text="Host Position"  class="initiationFormLabel"/>
                                        <Text text="{/Approval/cust_HostPosition}" class="initiationFormLabel"/>
                                    </VBox>
                                </HBox>
                                <HBox class="sapUiSmallMargin" width="96%" visible="{= ${/Approval/cust_ProcessType} === 'P'}">
                                    <VBox width="33rem">
                                        <Label text="Project ID"  class="initiationFormLabel"/>
                                        <Text text="{/Approval/cust_ProjectId}" class="initiationFormLabel"/>
                                    </VBox>
                                    <VBox width="33rem">
                                        <Label text="Project Name" class="initiationFormLabel"/>
                                        <Text text="{/Approval/cust_ProjectName}" class="initiationFormLabel"/>
                                    </VBox>

                                </HBox>
                            </VBox>

                        </f:content>
                    </f:Card>
                </VBox>
            </VBox>
        </content>

    </Page>
</mvc:View>